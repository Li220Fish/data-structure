#include <iostream>
#include <string>

using namespace std;

int main() {
    int x;  // number for array
    cout << "input number x：";
    cin >> x;

    cin.ignore(); // pass the newline

    string *strings = new string[x]; // set up array with new

    // input array
    for (int i = 0; i < x; i++) {
        cout << "input array " << i + 1 << "：";
        getline(cin, strings[i]); // that 'space' can input
    }

    // count array length
    int max=0, max_f=0, n;
    cout << "array length:" << endl;
    for (int i = 0; i < x; i++) {
        n = strings[i].length();
        if (max < n){
            max = n;
            max_f = 0;
            for(int j=0;j<max;j++){
                if(strings[i][j] != 32){
                    max_f++;
                    
                }else{ 
                    break;
                }
            }
            cout<<i<<"array "<<max_f<<endl;
        }
    }
    
    //print array
    cout<<"print list..."<<endl;
    int array_f =0;
    for (int i = 0; i < x; i++) {
        n = strings[i].length();
            array_f = 0;
            for(int j=0;j<max;j++){
                if(strings[i][j] != 32){
                    array_f++;
                }else{ 
                    break;
                }
            }
            for(int j=0;j<max_f-array_f;j++) cout<<" ";
            for(int j=0;j<n;j++) cout<<strings[i][j];
            cout<<endl;
        }
    
    // free memory
    delete[] strings;

    return 0;
}
