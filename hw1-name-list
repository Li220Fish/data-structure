#include <iostream>
#include <string>

using namespace std;

int main() {
    int n;  // 字符串数量
    cout << "输入字符串的数量：";
    cin >> n;

    cin.ignore(); // 忽略前面的换行符

    string *strings = new string[n]; // 用于存储字符串的数组

    // 输入字符串
    for (int i = 0; i < n; i++) {
        cout << "输入字符串 " << i + 1 << "：";
        getline(cin, strings[i]);
    }

    // 计算并输出每个字符串的长度
    cout << "每个字符串的长度：" << endl;
    for (int i = 0; i < n; i++) {
        cout << "字符串 " << i + 1 << " 长度：" << strings[i].length() << endl;
    }

    // 释放内存
    delete[] strings;

    return 0;
}
